body
  padding 50px
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif

a
  color #00b7ff

html
  background url('../images/bg.jpg')
  font-size 10pt

label
  display block
  color #000
  font-size 15px
  margin 0px 3px

.cf:before,
.cf:after
  content ""
  display table

.cf
  *zoom 1
  &:after
    clear both

:focus
  outline 0

.loginform
  width 410px
  margin 50px auto
  padding 25px
  background-color rgba(250, 250, 250, 0.9)
  border-radius 5px
  box-shadow 0px 0px 5px 0px rgba(0, 0, 0, 0.2), 
     inset 0px 1px 0px 0px rgba(250, 250, 250, 0.5)
  border 1px solid rgba(0, 0, 0, 0.3)
  ul
    padding 0
    margin 0
    width 100%
  li
    display inline
    float left
    width 100%
    &.center
      text-align center
  input
    &:not([type=submit])
      padding 5px
      margin-right 10px
      border 1px solid rgba(0, 0, 0, 0.3)
      border-radius 3px
      box-shadow inset 0px 1px 3px 0px rgba(0, 0, 0, 0.1), 
 0px 1px 0px 0px rgba(250, 250, 250, 0.5)
      width 94%
      transition all 0.1s ease
      -moz-transition all 0.1s ease
      -webkit-transition all 0.1s ease
      -o-transition all 0.1s ease
    &:not([type=submit]):focus
      margin-top -8px
      height 25px
      width 100%
      margin-left -8px
      background #FFFFC7
  input[type=submit]
    border 1px solid rgba(0, 0, 0, 0.3)
    background #ffd745
    background -moz-linear-gradient(top,  #ffd745 0%, #ffb23d 100%, #207cca 100%)
    background -webkit-gradient(linear, left top, left bottom, color-stop(0%,#ffd745), color-stop(100%,#ffb23d), color-stop(100%,#207cca))
    background -webkit-linear-gradient(top,  #ffd745 0%,#ffb23d 100%,#207cca 100%)
    background -o-linear-gradient(top,  #ffd745 0%,#ffb23d 100%,#207cca 100%)
    background -ms-linear-gradient(top,  #ffd745 0%,#ffb23d 100%,#207cca 100%)
    background linear-gradient(to bottom,  #ffd745 0%,#ffb23d 100%,#207cca 100%)
    filter progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffd745', endColorstr='#207cca',GradientType=0 )
    color #fff
    padding 5px 15px
    margin-right 0
    margin-top 15px
    border-radius 3px
    text-shadow 1px 1px 0px rgba(0, 0, 0, 0.3)
    transition all 0.1s ease
    -moz-transition all 0.1s ease
    -webkit-transition all 0.1s ease
    -o-transition all 0.1s ease
  input[type=submit]:active
    margin-top 5px
    height 35px
    width 100px
    font-size 20px

